extends layout

block content
	script(src='http://code.jquery.com/jquery.js')
	script(src='/javascripts/find.js'))
	include _navbar

	div(id="main")
		div(value="Enter data here", id="search_container")
			h4 Enter in information to begin
			| Enter Artist Name: 
			input(type="text", id="artist_name")
			br
			| Enter Song Name: 
			input(type="test", id="song_name")
			br
			br
			input(type="submit", value="Find Song", id="find_song")
		br
		div(id="lyric_container")
			p(id="song_info") #{songname} #{artist}
			div(id="lines")
				for line, i in lyrics
					| #{line}
					br